<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="simple" targetRuntime="MyBatis3Simple">
        <!--⽣成的java⽂件编码格式-->
        <property name="javaFileEncoding" value="UTF-8"/>
        <!--注释⽣成器--> <commentGenerator>
        <property name="suppressDate" value="true"/>
        <property name="suppressAllComments" value="true"/>
    </commentGenerator> <!--数据库连接配置-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:8080/ssm?characterEncoding=utf-8"
                        userId="root" password="root"/>
        <!--⽣成entity/domain对象-->
        <javaModelGenerator targetPackage="com.duyi.entity" targetProject="src/main/java"/>
        <!--⽣成mapper⽂件-->
        <sqlMapGenerator targetPackage="mappers" targetProject="src/main/resources"/>
        <!--⽣成mapper接⼝/dao接⼝-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.duyi.dao"
                             targetProject="src/main/java"/>
        <!--对应表名-->
        <table tableName="room"/>
    </context>
</generatorConfiguration>